{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/spec",
        "types": [
            "jest",
            "node"
        ],
        "target": "ES2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.spec.ts",
        "src/**/*.d.ts"
    ]
}